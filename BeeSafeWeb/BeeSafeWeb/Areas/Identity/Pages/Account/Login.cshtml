@page
@model LoginModel

@{
ViewData["Title"] = "Log in";
}

<div class="flex min-h-screen justify-center items-center bg-gray-100 dark:bg-gray-900 transition-all duration-300">
    <div class="bg-white dark:bg-gray-800 dark:text-white p-8 rounded-lg shadow-lg w-full max-w-sm">
        <h2 class="text-2xl font-semibold text-center mb-6 dark:text-yellow-400">Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
        <form method="post">
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input asp-for="Input.Email"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com"
                       class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md mt-2 
                              focus:outline-none focus:ring-2 focus:ring-yellow-500 dark:bg-gray-700 dark:placeholder-gray-400"
                       required />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input asp-for="Input.Password"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="password"
                       class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-md mt-2 
                              focus:outline-none focus:ring-2 focus:ring-yellow-500 dark:bg-gray-700 dark:placeholder-gray-400"
                       required />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit"
                        class="w-full py-3 bg-yellow-500 text-gray-900 font-semibold rounded-md 
                               hover:bg-yellow-600 dark:bg-yellow-400 dark:hover:bg-yellow-500 
                               focus:outline-none focus:ring-2 focus:ring-yellow-500 dark:focus:ring-yellow-400">
                    Login
                </button>
            </div>
        </form>
    </div>
</div>
